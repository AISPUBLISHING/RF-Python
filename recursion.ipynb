   "source": [
    "def print_counting(count):\n",
    "    #base case\n",
    "    if count==0:\n",
    "        return\n",
    "    \n",
    "    #updation of variables\n",
    "    count-=1\n",
    "    \n",
    "    #recall\n",
    "    print_counting(count)\n",
    "    \n",
    "    print(count)"
   ]
  },
